<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@color/gray_table"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_time_start"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="0.5dp"
        android:layout_weight="1.2"
        android:background="@color/white"
        android:gravity="center"
        android:paddingBottom="@dimen/stoker_edt"
        android:paddingTop="@dimen/stoker_edt"
        android:paddingLeft="@dimen/dp1"
        android:paddingRight="@dimen/dp1"
        android:minLines="2"
        android:maxLines="2"
        android:text="T/g tạo"
        android:textColor="@color/txt_introduce"
        android:textSize="@dimen/txt_13sp" />

    <TextView
        android:minLines="2"
        android:maxLines="2"
        android:text="T/g hoàn thành"
        android:id="@+id/txt_time_end"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="0.5dp"
        android:layout_weight="1.2"
        android:background="@color/white"
        android:gravity="center"
        android:paddingBottom="@dimen/stoker_edt"
        android:paddingTop="@dimen/stoker_edt"
        android:paddingLeft="@dimen/dp1"
        android:paddingRight="@dimen/dp1"
        android:textColor="@color/txt_introduce"
        android:textSize="@dimen/txt_13sp" />

    <TextView
        android:text="Mã ĐH"
        android:id="@+id/txt_code_order"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="0.5dp"
        android:layout_weight="0.7"
        android:background="@color/white"
        android:gravity="center"
        android:paddingBottom="@dimen/stoker_edt"
        android:paddingTop="@dimen/stoker_edt"
        android:paddingLeft="@dimen/dp1"
        android:paddingRight="@dimen/dp1"
        android:minLines="2"
        android:maxLines="2"
        android:textColor="@color/txt_introduce"
        android:textSize="@dimen/txt_13sp" />
    <TextView
        android:text="Doanh thu"
        android:id="@+id/txt_doanhso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="0.5dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="right|center_vertical"
        android:paddingBottom="@dimen/stoker_edt"
        android:paddingTop="@dimen/stoker_edt"
        android:paddingLeft="@dimen/dp1"
        android:paddingRight="@dimen/dp1"
        android:maxLines="2"
        android:minLines="2"
        android:textColor="@color/txt_introduce"
        android:textSize="@dimen/txt_13sp" />

    <TextView
        android:id="@+id/txt_hoahong"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="0.5dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="right|center_vertical"
        android:paddingBottom="@dimen/stoker_edt"
        android:paddingTop="@dimen/stoker_edt"
        android:paddingLeft="@dimen/dp1"
        android:paddingRight="@dimen/dp1"
        android:maxLines="2"
        android:minLines="2"
        android:text="Hoa hồng"
        android:textColor="@color/txt_introduce"
        android:textSize="@dimen/txt_13sp" />
</LinearLayout>