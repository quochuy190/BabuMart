<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_fragment_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/spr_date_view_order"
        android:id="@+id/cv_date_end"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_spinner"
        android:layout_marginTop="@dimen/margin_top_fragment_order"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cv_date_start"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.47">

        <TextView
            android:id="@+id/txt_date_end"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"

            android:gravity="center"
            android:padding="3dp"
            android:text="9/5/2019"
            android:textColor="@color/txt_introduce"
            android:textSize="@dimen/txt_15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_date_end"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="@dimen/pading_icon"
            android:scaleType="fitXY"
            android:src="@drawable/ic_calender"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="2:1.8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/spr_date_view_order"
        android:id="@+id/cv_date_start"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_spinner"
        android:layout_marginTop="@dimen/margin_top_fragment_order"
        app:layout_constraintEnd_toStartOf="@+id/cv_date_end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.47">

        <TextView
            android:id="@+id/txt_date_start"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:padding="3dp"
            android:text="9/5/2019"
            android:textColor="@color/txt_introduce"
            android:textSize="@dimen/txt_15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_date_start"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="@dimen/pading_icon"
            android:scaleType="fitXY"
            android:src="@drawable/ic_calender"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="2:1.8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/ll_filter_CTV"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_spinner"
        android:layout_marginTop="@dimen/margin_top_fragment_order"
        android:background="@drawable/spr_date_view_order"

        app:layout_constraintEnd_toStartOf="@+id/ll_filter_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_date_end"
        app:layout_constraintWidth_percent="0.47">

        <TextView
            android:id="@+id/txt_ctv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="3dp"
            android:text="Tất cả CTV"
            android:textColor="@color/txt_introduce"
            android:textSize="@dimen/txt_15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/img_down_filter_CTV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_down_filter_CTV"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/spr_btn_down_view_order"
            android:padding="2dp"
            android:src="@drawable/ic_down"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ll_filter_status"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_spinner"
        android:layout_marginTop="@dimen/margin_top_fragment_order"
        android:background="@drawable/spr_date_view_order"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ll_filter_CTV"
        app:layout_constraintTop_toBottomOf="@+id/cv_date_end"
        app:layout_constraintWidth_percent="0.47">

        <TextView
            android:id="@+id/txt_trangthai"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="3dp"
            android:text="Tất cả trạng thái"
            android:textColor="@color/txt_introduce"
            android:textSize="@dimen/txt_15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/img_down_filter_status"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_down_filter_status"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/spr_btn_down_view_order"
            android:padding="2dp"
            android:src="@drawable/ic_down"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_filter"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_spinner"
        android:layout_marginTop="@dimen/pading_icon"
        android:background="@drawable/spr_btn_login"
        android:text="Tìm kiếm"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_filter_status"
        app:layout_constraintWidth_percent="0.3" />

    <View
        android:id="@+id/view_search"
        android:layout_width="0dp"
        android:layout_height="@dimen/pading_icon"
        android:layout_marginTop="@dimen/dp5"
        android:background="@color/bg_fragment_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_filter" />-->
    <TextView
        android:textStyle="bold"
        android:id="@+id/txt_total_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/pading_icon"
        android:layout_marginLeft="@dimen/pading_icon"
        android:padding="@dimen/pading_icon"
        android:text="Tổng số đơn hàng: "
        android:textColor="@color/txt_introduce"
        android:textSize="@dimen/txt_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_search" />
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/pull_refresh_product"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_total_order">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_list_order"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="@dimen/stoker_edt_register">

        </androidx.recyclerview.widget.RecyclerView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


