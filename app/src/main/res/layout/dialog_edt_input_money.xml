<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_top_btn_login"
    android:background="@drawable/spr_dialog_background"
    android:padding="@dimen/margin_top_fragment_order">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:gravity="center"
        android:padding="@dimen/pading_icon"
        android:text="@string/txt_title_input_money"
        android:textColor="@color/txt_introduce"
        android:textSize="@dimen/txt_15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <neo.vn.imbeautiful.models.CurrencyEditText
        android:id="@+id/edt_input_money"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_fragment_order"
        android:background="@drawable/spr_edt_otp"

        android:padding="@dimen/margin_top_fragment_order"
        android:textColor="@color/app_main"
        android:textSize="@dimen/txt_15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_title"
        app:layout_constraintWidth_percent="0.6" />

    <TextView
        android:background="@drawable/spr_btn_login"
        android:gravity="center"
        android:layout_marginRight="@dimen/margin_top_fragment_order"
        android:id="@+id/btn_dongy"
        android:text="Đồng ý"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/txt_15sp"
        android:textAllCaps="true"
        android:textColor="@color/white"
        app:layout_constraintDimensionRatio="3:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_input_money"
        app:layout_constraintWidth_percent="0.3" />
    <ImageView
        android:visibility="gone"
        app:layout_constraintDimensionRatio="1:1"
        android:src="@drawable/ic_delete"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp" />
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_top_fragment_order"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_dongy" />

</androidx.constraintlayout.widget.ConstraintLayout>