<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/ll_title_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/stoker_edt"
        android:layout_marginTop="@dimen/pading_icon"
        android:layout_marginRight="@dimen/stoker_edt"
        android:background="@drawable/spr_title_table_report"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <TextView
            android:id="@+id/txt_title_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:paddingLeft="@dimen/stoker_edt"
            android:paddingTop="@dimen/dp7"
            android:paddingRight="@dimen/stoker_edt"
            android:paddingBottom="@dimen/dp7"
            android:text="Danh mục"
            android:textColor="@color/txt_introduce"
            android:textSize="@dimen/txt_14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.3" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray" />

        <TextView

            android:id="@+id/txt_title_quantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="@dimen/stoker_edt"
            android:paddingTop="@dimen/dp7"
            android:paddingRight="@dimen/stoker_edt"
            android:paddingBottom="@dimen/dp7"
            android:text="SL"
            android:textColor="@color/txt_introduce"
            android:textSize="@dimen/txt_13sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/txt_title_sanluong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="@dimen/stoker_edt"
            android:paddingTop="@dimen/dp7"
            android:paddingRight="@dimen/stoker_edt"
            android:paddingBottom="@dimen/dp7"
            android:text="Sản lượng"
            android:textColor="@color/txt_introduce"
            android:textSize="@dimen/txt_13sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/txt_title_doanhso"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1.5"
            android:gravity="center"
            android:paddingLeft="@dimen/stoker_edt"
            android:paddingTop="@dimen/dp7"
            android:paddingRight="@dimen/stoker_edt"
            android:paddingBottom="@dimen/dp7"
            android:text="Doanh số"
            android:textColor="@color/txt_introduce"
            android:textSize="@dimen/txt_13sp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_title_table"
        android:layout_marginLeft="@dimen/stoker_edt"
        android:layout_marginRight="@dimen/stoker_edt"
        android:background="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/rcv_list_table"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:background="@drawable/spr_total_table_report"
        app:layout_constraintTop_toBottomOf="@+id/rcv_list_table"
        app:layout_constraintEnd_toEndOf="@+id/rcv_list_table"
        app:layout_constraintStart_toStartOf="@+id/rcv_list_table"
        android:layout_width="0dp"
        android:layout_height="10dp">
        <TextView
            android:id="@+id/txt_title_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:paddingLeft="@dimen/stoker_edt"
            android:paddingTop="@dimen/dp7"
            android:paddingRight="@dimen/stoker_edt"
            android:paddingBottom="@dimen/dp7"
            android:text="Danh mục"
            android:textColor="@color/txt_introduce"
            android:textSize="@dimen/txt_14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.3" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray" />

        <TextView

            android:id="@+id/txt_title_quantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="@dimen/stoker_edt"
            android:paddingTop="@dimen/dp7"
            android:paddingRight="@dimen/stoker_edt"
            android:paddingBottom="@dimen/dp7"
            android:text="SL"
            android:textColor="@color/txt_introduce"
            android:textSize="@dimen/txt_13sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/txt_title_sanluong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="@dimen/stoker_edt"
            android:paddingTop="@dimen/dp7"
            android:paddingRight="@dimen/stoker_edt"
            android:paddingBottom="@dimen/dp7"
            android:text="Sản lượng"
            android:textColor="@color/txt_introduce"
            android:textSize="@dimen/txt_13sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/txt_title_doanhso"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1.5"
            android:gravity="center"
            android:paddingLeft="@dimen/stoker_edt"
            android:paddingTop="@dimen/dp7"
            android:paddingRight="@dimen/stoker_edt"
            android:paddingBottom="@dimen/dp7"
            android:text="Doanh số"
            android:textColor="@color/txt_introduce"
            android:textSize="@dimen/txt_13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginRight="1dp"
        android:layout_marginLeft="1dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/rcv_list_table"
        app:layout_constraintEnd_toEndOf="@+id/rcv_list_table"
        app:layout_constraintStart_toStartOf="@+id/rcv_list_table"
        android:layout_width="0dp"
        android:layout_height="1dp">

    </LinearLayout>

    <View
        android:background="@color/gray"
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/rcv_list_table"
        app:layout_constraintStart_toStartOf="@id/rcv_list_table"
        app:layout_constraintTop_toTopOf="@id/rcv_list_table" />
    <View
        android:background="@color/gray"
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/rcv_list_table"
        app:layout_constraintEnd_toEndOf="@id/rcv_list_table"
        app:layout_constraintTop_toBottomOf="@id/ll_title_table" />

</androidx.constraintlayout.widget.ConstraintLayout>