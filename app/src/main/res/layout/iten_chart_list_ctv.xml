<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_table"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/txt_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="0.5dp"
        android:layout_weight="1.5"
        android:background="@drawable/spr_item_language"
        android:gravity="center"
        android:paddingBottom="@dimen/dp7"
        android:paddingTop="@dimen/dp7"
        android:paddingLeft="@dimen/dp1"
        android:paddingRight="@dimen/dp1"
        android:singleLine="true"
        android:text="Tên CTV"
        android:textColor="@color/txt_introduce"
        android:textSize="@dimen/txt_14sp" />

    <TextView
        android:background="@drawable/spr_item_language"
        android:id="@+id/txt_donhang"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="0.5dp"
        android:layout_weight="0.7"
        android:gravity="center"
        android:paddingBottom="@dimen/dp7"
        android:paddingTop="@dimen/dp7"
        android:paddingLeft="@dimen/dp1"
        android:paddingRight="@dimen/dp1"
        android:singleLine="true"
        android:text="Số ĐH"
        android:textColor="@color/txt_introduce"
        android:textSize="@dimen/txt_14sp" />

    <TextView
        android:background="@drawable/spr_item_language"
        android:id="@+id/txt_doanhso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="0.5dp"
        android:layout_weight="1"
        android:gravity="right"
        android:paddingBottom="@dimen/dp7"
        android:paddingTop="@dimen/dp7"
        android:paddingLeft="@dimen/dp1"
        android:paddingRight="@dimen/dp1"
        android:singleLine="true"
        android:text="Doanh số"
        android:textColor="@color/txt_introduce"
        android:textSize="@dimen/txt_14sp" />
    <TextView
        android:background="@drawable/spr_item_language"
        android:id="@+id/txt_hoahong"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="0.5dp"
        android:layout_weight="1"
        android:gravity="right"
        android:paddingBottom="@dimen/dp7"
        android:paddingTop="@dimen/dp7"
        android:paddingLeft="@dimen/dp1"
        android:paddingRight="@dimen/dp1"
        android:singleLine="true"
        android:text="Hoa hồng"
        android:textColor="@color/txt_introduce"
        android:textSize="@dimen/txt_14sp" />
</LinearLayout>