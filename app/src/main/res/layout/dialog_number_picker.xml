<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_top_btn_login"
    android:background="@drawable/spr_dialog_background"
    android:padding="@dimen/margin_top_fragment_order">

    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/number_picker"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.35"
        app:np_dividerColor="@color/gray"
        app:np_selectedTextColor="@color/app_main"
        app:np_selectedTextSize="@dimen/txt_user"
        app:np_textColor="@color/app_main"
        app:np_textSize="@dimen/txt_15sp"
        app:np_value="3" />

    <TextView
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_fragment_order"
        android:padding="@dimen/pading_icon"
        android:text="OK"
        android:textColor="@color/app_main"
        android:textSize="@dimen/txt_15sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_cancel"
        app:layout_constraintTop_toBottomOf="@id/number_picker" />


    <TextView
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_fragment_order"
        android:layout_marginRight="@dimen/margin_top_fragment_order"
        android:padding="@dimen/pading_icon"
        android:text="CANCEL"
        android:textColor="@color/app_main"
        android:textSize="@dimen/txt_15sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toStartOf="@+id/btn_ok"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/number_picker" />
</androidx.constraintlayout.widget.ConstraintLayout>