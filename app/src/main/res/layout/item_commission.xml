<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item_commission"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_name_hh_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="0.5dp"
        android:layout_weight="1.5"
        android:background="@color/gray_table_commis"
        android:gravity="left"
        android:paddingLeft="@dimen/stoker_edt"
        android:paddingTop="@dimen/dp7"
        android:paddingRight="@dimen/stoker_edt"
        android:paddingBottom="@dimen/dp7"
        android:singleLine="true"

        android:textColor="@color/txt_introduce"
        android:textSize="@dimen/txt_14sp" />

    <TextView
        android:id="@+id/txt_user_hh_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="0.5dp"
        android:layout_weight="1"
        android:background="@color/gray_table_commis"
        android:gravity="center"
        android:paddingLeft="@dimen/stoker_edt"
        android:paddingTop="@dimen/dp7"
        android:paddingRight="@dimen/stoker_edt"
        android:paddingBottom="@dimen/dp7"
        android:singleLine="true"

        android:textColor="@color/txt_introduce"
        android:textSize="@dimen/txt_14sp" />

    <TextView

        android:id="@+id/txt_total_hh_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="0.5dp"
        android:layout_weight="1.2"
        android:background="@color/gray_table_commis"
        android:gravity="right"
        android:paddingLeft="@dimen/stoker_edt"
        android:paddingTop="@dimen/dp7"
        android:paddingRight="@dimen/stoker_edt"
        android:paddingBottom="@dimen/dp7"
        android:singleLine="true"

        android:textColor="@color/txt_introduce"
        android:textSize="@dimen/txt_14sp" />


</LinearLayout>