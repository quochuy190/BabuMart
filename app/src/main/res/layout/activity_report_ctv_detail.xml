<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar_all"/>

    <TextView

        android:id="@+id/txt_name_CTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_top_fragment_order"
        android:padding="@dimen/stoker_edt"
        android:text="Tên CTV: ..."
        android:textColor="@color/txt_introduce"
        android:textSize="@dimen/txt_15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_bar" />

    <TextView

        android:id="@+id/txt_user_CTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_top_fragment_order"
        android:padding="@dimen/stoker_edt"
        android:text="Mã CTV: ..."
        android:textColor="@color/txt_introduce"
        android:textSize="@dimen/txt_15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_name_CTV" />

    <TextView

        android:id="@+id/txt_phone_CTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_top_fragment_order"
        android:padding="@dimen/stoker_edt"
        android:text="Số điện thoại: ..."
        android:textColor="@color/txt_introduce"
        android:textSize="@dimen/txt_15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_user_CTV" />

    <TextView

        android:id="@+id/txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_top_fragment_order"
        android:padding="@dimen/stoker_edt"
        android:text="Email: ..."
        android:textColor="@color/txt_introduce"
        android:textSize="@dimen/txt_15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_phone_CTV" />

    <View
        android:id="@+id/view_info"
        android:background="@color/gray_table"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_email"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pading_icon"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_report_ctv_detail"
        android:background="@color/gray_table"
        android:layout_margin="@dimen/pading_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>